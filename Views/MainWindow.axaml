<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:JimmiLauncher.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="1000" Height="750" CanResize="False"
        x:Class="JimmiLauncher.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/jimmi-icon.ico"
        x:CompileBindings="True"
        Title="Jimmi Launcher">

    <Window.Background>
        <ImageBrush Source="avares://JimmiLauncher/Assets/background.png" TileMode="Tile" Stretch="None" DestinationRect="0 0 128 128"/>
    </Window.Background>

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid>
        <ContentControl Content="{Binding CurrentMenu}"/>
    </Grid>
</Window>
